:root {
  --sc-color-primary-h: 21.6;
  --sc-color-primary-s: 38.9%;
  --sc-color-primary-l: 55.1%;
  --sc-color-primary: hsl(21.6, 38.9%, 55.1%);

  --sc-color-secondary-h: 32;
  --sc-color-secondary-s: 42%;
  --sc-color-secondary-l: 91%;
  --sc-color-secondary: hsl(32, 42%, 91%);

  --sc-color-error: #d64254;
  --sc-color-error-h: 355deg;
  --sc-color-error-s: 74%;
  --sc-color-error-l: 55%;

  --sc-color-sale: #d64254;
  --sc-color-sale-h: 355deg;
  --sc-color-sale-s: 74%;
  --sc-color-sale-l: 55%;

  --sc-color-bonus: #02ACDE;
  --sc-color-sale-h: 195deg;
  --sc-color-sale-s: 98%;
  --sc-color-sale-l: 46%;

  --signature: #d64254;
  --signature-rgb: 214,66,84;
  --beige: #fcf9f8;
  --pink: #f1e5df;
  --rusty-brown: #b98060;
  --rusty-purple: #60383f;
  --light-coral-pink: #d1a194;
  --taupe: #cdc5bf;
  --dusty-blue: #bac8ca;

  --white: #ffffff;
  --grey-1: #f1f1f1;
  --grey-1-5: #fafafa;
  --grey-2: #6a6c6e;
  --grey-3: #565656;
  --grey-4: #292929;

  --yellow: #eab70f;
  --light-blue: #dfebf1;
  --dusty: #dfe5e7;
  --purple: #eae5ec;
  --green: #e5e7e0;
  --light-taupe: #e7e0da;
  --sand: #f3e5d4;

  --margin: 4.5%;

  --sc-shade-darkest: hsl(0deg, 0%, 13%);
  --sc-shade-dark: hsl(0,0%,32%);
  --sc-shade-neutral: rgba(39,39,39,.35);
  --sc-shade-light: rgba(39,39,39,.09);
  --sc-shade-lighter: rgb(39 39 39/4.5%);
  --sc-shade-lightest: rgba(39,39,39,0);

  --sc-border-radius: 0.4rem;
  --sc-border-width: 0.06rem;
  --sc-font-family: "Nunito", sans-serif;
  --sc-font-secondary: "Playfair Display", serif;
  --sc-body-bg: var(--beige);
  --sc-header-bg: var(--pink);
  --sc-menu-link-color-resting: var(--grey-4);
  --sc-menu-link-color-hover: var(--grey-3);

  --sc-footer-bg: transparent;
  --sc-footer-color: #000;

  --sc-padding-inline: 6.5vw;

  /* cart floating sidebar */
  --sc-cart-header-bg: var(--rusty-purple);
  --sc-cart-header-color: white;
  --sc-cart-header-button-bg: var(--rusty-brown);
  --sc-cart-header-button-bg-hover: var(--light-coral-pink);
  --sc-cart-header-button-color-hover: var(--grey-4);

  /* Tabs section */
  --sc-tabs-bg-color: var(--taupe);
  --sc-tabs-font-color: var(--grey-4);

  /* category card background */
   --sc-category-card-bg: #f9f5f1;
}