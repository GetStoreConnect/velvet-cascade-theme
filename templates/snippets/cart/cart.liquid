{%- if current_cart != blank and current_cart.items.size > 0 %}
  {%- form "cart", data-submit-on-change: true, data-sc-cart: blank, remote: true %}

    <div class="SC-CartPage_body">
      <section class="SC-CartPage_main">
        <header class="SC-PageHeader SC-CartPage_header">
          <h1 class="SC-PageHeader_heading">
            {{ "cart.header" | t }} ({{ current_cart.item_count }})
          </h1>
        </header>
        {%- comment %} Products {% endcomment %}
        {%- render "shared/cart/items", source: current_cart, extended: true, width: "80px" %}
      </section>
      <aside class="SC-CartPage_summary sc-flex-col sc-justify-center">
        <div class="sc-mb" data-cart-summary>
          {%- render "shared/order_total", source: current_cart, total_class: "SC-CartPage_summary_total" %}
        </div>

        <div class="SC-CartPage_summary_action sc-flex sc-justify-center">
          {%- render "shared/cart/checkout_button", class: "sc-cart_button sc-bg-primary sc-expand sc-one-half-medium-and-up" %}
        </div>

        <div class="SC-CartPage_summary_info sc-mt-xlarge sc-ms-auto">
          {%- render "shared/payment_module" %}
        </div>
      </aside>
    </div>

  {%- endform %}
{%- else %}
 <div class="SC-CartPage_body">
    <section class="SC-CartPage_main sc-pe-xlarge">
      <h1 class="sc-font-normal">{{ "cart.empty_msg" | t }}</h1>
      <p>
        <a href="{{ current_store.home_path }}" class="SC-Link">{{ "cart.links.continue_shopping" | t }}</a>
      </p>
    </section>
  </div>
{%- endif %}