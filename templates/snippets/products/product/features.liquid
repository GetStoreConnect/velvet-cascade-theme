{% default product: blank %}

<div class="SC-Accordion sc-bg-pink sc-p-medium" id="product-features">
  <button class="SC-Accordion_header sc-m-none sc-font-base sc-font-bold sc-flex sc-justify-space-between" data-accordion-trigger="product-features" type="button">
    <span class="SC-Accordion_heading sc-m-none sc-flex sc-align-center sc-gap">
      {%- render "shared/icons/comment" %}
      {{ product.features_label }}
    </span>
    <svg class="SC-Accordion_header_icon" data-accordion-icon viewBox="0 0 100 100">
      <rect x="0" y="42" width="100%" height="16" rx="8"></rect>
      <rect x="42" y="0" width="16" height="100%" rx="8"></rect>
    </svg>
  </button>
  <div class="SC-Accordion_body sc-ps-medium sc-pe-medium sc-lg:ps-large sc-lg:pe-large" aria-expanded="false" data-accordion-target="product-features">
    {{ product.features_content }}
  </div>
</div>